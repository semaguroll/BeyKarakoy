                    </Button>
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="48" Margin="623,0,0,34">
                        <materialDesign:PackIcon Kind="Account"/>
                    </Button>
                </Grid>
                <Grid HorizontalAlignment="Left" Height="100" Margin="0,100,0,0" VerticalAlignment="Top" Width="772">
                    <Label Content="Yeni Hesap Oluştur!" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="296,32,283,32" Width="193" ></Label>
                </Grid>
                <Grid HorizontalAlignment="Center" Width="340" Margin="218,200,217,12">
                    <TextBox HorizontalAlignment="Left" Background="#FFD1D1D1" BorderBrush="{x:Null}" Foreground="Gray" Height="30" Margin="74,155,0,0" TextWrapping="Wrap" Text="  E-posta" VerticalAlignment="Top" Width="173"/>
