                    <TextBox HorizontalAlignment="Left" Background="#FFD1D1D1" BorderBrush="{x:Null}" Foreground="Gray" Height="30" Margin="74,85,0,0" TextWrapping="Wrap" Text="  Adınız" VerticalAlignment="Top" Width="173"/>
                    <TextBox HorizontalAlignment="Left" Background="#FFD1D1D1" BorderBrush="{x:Null}" Foreground="Gray" Height="30" Margin="74,120,0,0" TextWrapping="Wrap" Text="  Soyadınız" VerticalAlignment="Top" Width="173"/>
                    <Button Content="OLUŞTUR!" Background="Black" HorizontalAlignment="Left" Margin="74,241,0,0" VerticalAlignment="Top" Width="173" Height="29"/>
                    <Button Content="Ana Sayfaya Geri Dön!" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" HorizontalAlignment="Center"  Width="173" Height="28" Margin="74,290,93,59" FontFamily="Sitka Heading"/>
                </Grid>
            </Grid>
            <Grid Height="124" Background="#FFDEDEDE">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Width="384"  Height="50" Background="White"/>
