                        <materialDesign:PackIcon Kind="ShoppingBasket"/>
                    </Button>
                    <Button Background="{x:Null}" BorderBrush="{x:Null}"  Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Center" Width="48" Margin="0,34,48,34" Grid.Column="2" >
